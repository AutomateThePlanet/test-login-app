<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>

    <link href="profile.css" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">

</head>

<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">HOME</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" onclick="resetDatabase()">Reset Database</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ... rest of the code -->

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12"> <!-- Updated column class -->
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title">Welcome, <span id="username"></span></h1>
                        <p class="card-text">You have logged in with <span id="provider"></span>.</p>
                        <a href="/logout" class="btn btn-danger">Logout</a>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <!-- User Edit Form -->
                        <form id="edit-user-form">
                            <div class="form-group">
                                <label for="editUsername">Username</label>
                                <input type="text" class="form-control" id="editUsername" placeholder="Enter username">
                            </div>
                            <div class="form-group">
                                <label for="editEmail">Email address</label>
                                <input type="email" class="form-control" id="editEmail" placeholder="Enter email"
                                    required>
                                <small class="form-text text-muted">We'll never share your email with anyone
                                    else.</small>
                            </div>
                            <div class="form-group">
                                <label for="editPhoneNumber">Phone Number</label>
                                <input type="tel" class="form-control" id="editPhoneNumber"
                                    placeholder="Enter phone number" pattern="[0-9]{10}"
                                    title="Phone number should be 10 digits">
                            </div>
                            <div class="form-group">
                                <label for="editPassword">Password</label>
                                <input type="password" class="form-control" id="editPassword" placeholder="Password">
                            </div>
                            <button type="submit" class="btn btn-primary">Update Profile</button>
                        </form>

                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card mt-3">
                    <div class="card-header">
                        Two-Factor Authentication (2FA)
                    </div>
                    <div class="card-body">
                        <p id="2fa-status">Status: <span class="badge badge-secondary">Disabled</span></p>
                
                        <!-- Button to start 2FA setup -->
                        <button id="setup-2fa-btn" class="btn btn-primary">Set Up 2FA</button>
                
                        <!-- This section will be hidden by default and shown when the user starts the 2FA setup -->
                        <div id="2fa-setup" style="display: none;">
                            <p>Scan the QR code below with your Google Authenticator app:</p>
                            <img id="qrcode" src="" alt="QR Code" />
                            <div class="form-group mt-3">
                                <label for="token">Enter the token from your app:</label>
                                <input type="text" class="form-control" id="token" placeholder="123456">
                            </div>
                            <button id="verify-2fa-btn" class="btn btn-success">Verify & Enable 2FA</button>
                        </div>
                
                        <!-- This section will be shown once 2FA is set up successfully -->
                        <div id="2fa-enabled" style="display: none;">
                            <p>Your 2FA is enabled! Ensure you have saved your recovery codes.</p>
                            <button id="disable-2fa-btn" class="btn btn-danger">Disable 2FA</button>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
        <div class="mt-5">
            <a href="/" class="btn btn-secondary">Back to Home</a>
            <button onclick="revokeGoogleAccess()" class="btn btn-danger">Revoke Google Access</button>
            <button onclick="revokeFacebookAccess()" class="btn btn-danger">Revoke Facebook Access</button>
            <div class="alert alert-success" id="revoked-alert" style="display:none;">
                Permissions have been revoked successfully!
            </div>
        </div>
    </div>
    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true"
        style="position: fixed; bottom: 50px; left: 50px;">
        <div class="toast-header">
            <strong class="mr-auto">Notification</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body" id="toast-body"></div>
    </div>

    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="profile.js"></script>
</body>

</html>